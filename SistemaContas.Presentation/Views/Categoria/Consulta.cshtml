@model List<ContasApp.Presentation.Models.CategoriaConsultaViewModel>

@** Acessando a sessão do _AdminLayout 'styles'*@
@section styles{ 
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
}

@** Acessando a sessão do _AdminLayout 'scripts'*@
@section scripts{
    <script src="https://code.jquery.com/jquery-3.7.1.min.js "></script>
    <script src="//cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#consulta_categorias').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json'
                }
            });
        })
    </script>
}


<div>
    <h5>Consulta de categorias</h5>
    <p>Listagem de categorias de contas cadastrada para o seu usuário</p>
</div>

<div class="table-responsive">
    <table id="consulta_categorias" class="table table-hover table-striped table-sm">
        <thead>
            <tr>
                <th>Nome da categoria</th>
                <th>Tipo</th>
                <th width="140">Operações</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>
                        @if ((int)item.Tipo == 1)
                        {
                            <span class="badge bg-success">@item.Tipo</span>
                        }
                        else if ((int)item.Tipo == 2)
                        {
                            <span class="badge bg-danger">@item.Tipo</span>
                        }
                    </td>
                    <td>
                        <a href="/Categoria/Edicao/@item.CategoriaId" class="btn btn-outline-primary btn-sm">
                            Editar
                        </a>
                        <a href="/Categoria/Exclusao/@item.CategoriaId" class="btn btn-outline-danger btn-sm" onclick="return confirm('Deseja realmente excluir está categoria?')">
                            Excluir
                        </a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>