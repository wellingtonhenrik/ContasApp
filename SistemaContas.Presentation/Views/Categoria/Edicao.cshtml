@** Declarando a classe de modelo desta página*@
@model ContasApp.Presentation.Models.CategoriasEdicaoViewModel;

<div>
    <h5>Edição de categoras</h5>
    <p>Utilize o formulário para modificar os dados da categoria.</p>
</div>

@using (Html.BeginForm())
{
    <div>
        @Html.HiddenFor(model => model.CategoriasId)
    </div>

    <div class="row mb-2">
        <div class="col-md-8">
            <label>Nome da categoria:</label>
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control"})
            <span>
                @Html.ValidationMessageFor(model => model.Nome)
            </span>
        </div>
        <div class="col-md-4">
            <label>Selecione tipo categoria</label>
            @Html.DropDownListFor(model => model.Tipo, ViewBag.Tipos as SelectList, "Escolha uma opção", new {@class = "form-select"})
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Tipo)
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-12">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                <a href="/Categoria/Consulta" class="btn btn-light">Ir para a consulta</a>
            </div>
        </div>
    </div>
}
